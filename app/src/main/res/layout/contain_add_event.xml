<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:padding="@dimen/activity_horizontal_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical" >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <!--
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center|left"
                                    android:padding="5dp"
                                    android:text="Campaign Details"
                                    android:textColor="#212121"
                                    android:textStyle="bold" />-->





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Event Banner"
                        android:textStyle="bold"
                        android:padding="10dp"/>

                    <ImageView
                        android:id="@+id/campaignPic"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@mipmap/icon_"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp" >

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rounded_rect">

                            <EditText
                                android:id="@+id/_title"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="20dp"
                                android:hint="Event Title"
                                android:inputType="text"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textColor="#000000" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rounded_rect">

                            <EditText
                                android:id="@+id/_location"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="20dp"
                                android:hint="Event Location"
                                android:inputType="text"
                                android:padding="5dp"
                                android:focusable="false"
                                android:singleLine="true"
                                android:textColor="#000000" />
                        </android.support.design.widget.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rounded_rect">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Event Type"
                                android:textStyle="bold"
                                android:padding="10dp" />

                            <Spinner
                                android:id="@+id/products"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                />

                        </LinearLayout>


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/cuscat_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:visibility="gone"
                            android:background="@drawable/rounded_rect">

                            <EditText
                                android:id="@+id/_custom_cat"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="20dp"
                                android:hint="Custom Category"
                                android:inputType="text"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:textColor="#000000" />
                        </android.support.design.widget.TextInputLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rounded_rect">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_weight="1"
                                >

                                <EditText
                                    android:id="@+id/c_start"
                                    android:layout_width="150dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="20dp"
                                    android:hint="Start Date &amp; Time"
                                    android:inputType="text"
                                    android:padding="5dp"
                                    android:focusable="false"
                                    android:singleLine="true"
                                    android:textColor="#000000" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <EditText
                                    android:id="@+id/c_end"
                                    android:layout_width="150dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="20dp"
                                    android:hint="End Date &amp; Time"
                                    android:inputType="text"
                                    android:padding="2dp"
                                    android:focusable="false"
                                    android:singleLine="true"
                                    android:textColor="#000000" />

                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>


                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rounded_rect">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Event Members"
                                android:textStyle="bold"
                                android:padding="10dp"/>


                            <com.devonetech.android.yourinvited.custom_view.MultiSelctionSpinner
                                android:id="@+id/_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                />



                        </android.support.design.widget.TextInputLayout>



                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rounded_rect">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Event Coordinator"
                                android:textStyle="bold"
                                android:padding="10dp"/>


                            <Spinner
                                android:id="@+id/_spinner_codinator"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                />



                        </android.support.design.widget.TextInputLayout>


                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:counterEnabled="true"
                            android:background="@drawable/rounded_rect"
                            app:counterMaxLength="256">

                            <EditText
                                android:id="@+id/_description"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_marginTop="20dp"
                                android:hint="Description about the Event"
                                android:inputType="text"
                                android:padding="5dp"
                                android:gravity="top"
                                android:singleLine="true"
                                android:textColor="#000000" />
                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>




                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>