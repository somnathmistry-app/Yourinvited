<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/bottom_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:gravity="top"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/sos"
                            android:visibility="gone"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="10dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="15dp">

                            <com.devonetech.android.yourinvited.custom.Circle_Image
                                android:id="@+id/profile_iv"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/man" />

                            <TextView
                                android:id="@+id/user_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Robert Due"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:padding="10dp"
                                android:gravity="center"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/user_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="+9134683483423"
                                android:padding="5dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/user_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="robert.due@hotmail.com"
                                android:padding="5dp"
                                android:gravity="center"
                                android:layout_marginTop="3dp"/>
                        </LinearLayout>


                    </FrameLayout>

                    <android.support.v7.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/cvTopRating"
                        android:elevation="10dp"
                        android:layout_margin="10dp"
                        android:padding="15dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">

                        <android.support.v7.widget.CardView

                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:elevation="10dp"
                            app:cardBackgroundColor="@color/green"
                            app:cardCornerRadius="20dp">

                            <TextView
                                android:id="@+id/edit_account"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:padding="5sp"
                                android:text="Edit Account"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="15sp" />
                        </android.support.v7.widget.CardView>

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                />

                        <android.support.v7.widget.CardView

                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:elevation="10dp"
                            app:cardBackgroundColor="@color/colorPrimary"
                            app:cardCornerRadius="20dp">

                            <TextView
                                android:id="@+id/logout_user"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:padding="5sp"
                                android:text="Logout"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="15sp" />
                        </android.support.v7.widget.CardView>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:id="@+id/my_timeline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_rss_feed_black_24dp"
                            android:padding="10dp"
                            android:text="  Timeline"
                            android:textSize="15dp"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.7dp"
                            android:layout_margin="5dp"
                            android:layout_marginTop="10dp"
                            android:background="#80000000" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/my_friends"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_people_black_24dp"
                            android:padding="10dp"
                            android:text="  Friends"
                            android:textSize="15dp"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.7dp"
                            android:layout_margin="5dp"
                            android:layout_marginTop="10dp"
                            android:background="#80000000" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/save_locations"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="  Saved Locations"
                            android:drawableLeft="@drawable/ic_location_on_black_24dp"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:padding="10dp"
                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.7dp"
                            android:layout_marginTop="10dp"
                            android:layout_margin="5dp"
                            android:background="#80000000"/>



                    </LinearLayout>





                        <LinearLayout
                            android:id="@+id/myEvents"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="  Events"
                                android:drawableLeft="@drawable/ic_open_in_new_black_24dp"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:padding="10dp"
                                />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0.7dp"
                                android:layout_marginTop="10dp"
                                android:layout_margin="5dp"
                                android:background="#80000000"/>



                        </LinearLayout>

                    <LinearLayout
                        android:id="@+id/eventRequest"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="  Event Request"
                            android:drawableLeft="@drawable/ic_open_in_new_black_24dp"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:padding="10dp"
                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.7dp"
                            android:layout_marginTop="10dp"
                            android:layout_margin="5dp"
                            android:background="#80000000"/>



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/nearbyplace"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="  Near By Places"
                            android:drawableLeft="@drawable/ic_location_on_black_24dp"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:padding="10dp"
                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.7dp"
                            android:layout_marginTop="10dp"
                            android:layout_margin="5dp"
                            android:background="#80000000"/>



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/my_group"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="  Groups"
                            android:drawableLeft="@drawable/ic_people_black_24dp"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:padding="10dp"
                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.7dp"
                            android:layout_marginTop="10dp"
                            android:layout_margin="5dp"
                            android:background="#80000000"/>



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="  Notifications"
                            android:drawableLeft="@drawable/ic_notifications_black_24dp"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:padding="10dp"
                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.7dp"
                            android:layout_marginTop="10dp"
                            android:layout_margin="5dp"
                            android:background="#80000000"/>



                    </LinearLayout>






                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</LinearLayout>